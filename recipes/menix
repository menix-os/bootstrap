#! /bin/sh

name=menix
from_source=menix
revision=1
hostdeps="gcc"
skip_pkg_check=yes

configure() {
    meson_configure
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild

    mkdir -p ${dest_dir}/usr/share/menix/modules
    touch ${dest_dir}/usr/share/menix/modules/.keep
}
