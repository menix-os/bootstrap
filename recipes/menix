#! /bin/sh

name=menix
from_source=menix
revision=1
imagedeps="build-essential meson ninja-build python3-kconfiglib"
hostdeps="binutils gcc pkg-config"
skip_pkg_check=yes

configure() {
    srctree="${source_dir}" ARCH="${JINX_ARCH}" python3 -m alldefconfig

    meson_configure_noflags \
        -Dconfig="$(pwd)/.config"
}

build() {
    meson compile -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" meson install --no-rebuild

    post_package_strip
}
