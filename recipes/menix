#! /bin/sh

name=menix
from_source=menix
revision=1
imagedeps="build-essential meson ninja-build"
allow_network=yes
hostdeps="gcc binutils"
builddeps="mlibc-headers mlibc"
skip_pkg_check=yes

configure() {
    meson_configure
}

build() {
    ninja -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" ninja install
}
