name=os-test
version=1764d1493063388df9ab42544cb5da371b44fd58
revision=1
git_url="https://gitlab.com/sortix/os-test.git"
commit=1764d1493063388df9ab42544cb5da371b44fd58
imagedeps="build-essential"
hostdeps="gcc binutils"
deps="core-libs"

configure() {
	cp -rpa ${source_dir}/* .
}

build() {
	make -j${parallelism} OS=Menix CC=${TARGET_CC} CC_FOR_BUILD=gcc
}

package() {
	mkdir -pv "${dest_dir}/usr/share/os-test"
	cp -rpa * "${dest_dir}/usr/share/os-test"
}
